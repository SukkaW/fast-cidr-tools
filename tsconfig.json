{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*", "test/**/*", "rollup.config.ts", "benchmark.cts"],
  "exclude": ["test/fixtures/**/*"]
}
